pipeline {
    
    agent { 
        docker { 
            args '-u root:sudo -w /usr/src'
            image 'node:10-slim'
        }
    }
    stages {
        stage('install') {
            steps {
                sh 'pwd && ls -la'
                sh 'yarn install:all'
                sh 'yarn workspace linode-js-sdk build'
                sh 'yarn workspace linode-mamager cypress -v'
                sh 'yarn cy:e2e'
            }
        }
    }
}