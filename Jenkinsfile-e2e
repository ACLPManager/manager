pipeline {
    
    agent { 
        docker {
            image 'node:10-slim'
            args '-e CYPRESS_CACHE_FOLDER=/home/node/app/.cache -e Y_CACHE_FOLDER=/home/node/app/.yarn -e Y_CONFIG_FOLDER=/home/node/app/.config -v $HOME:/home/node/app'
        }
    }
    stages {
        stage('build') {
            steps {
                sh 'echo $CYPRESS_CACHE_FOLDER'
                sh 'pwd'
                sh 'yarn config set cache-folder $Y_CACHE_FOLDER'
                sh 'yarn config set global-folder $Y_CONFIG_FOLDER'
                sh 'yarn cache dir'
                sh 'yarn global dir'
                sh 'yarn global add cypress@3.8.2'
                sh 'yarn install:all'
                sh 'yarn run cypress verify'
                sh 'yarn workspace linode-js-sdk build'
            }
        }
        
        stage('start local server') {
            steps {
                // start local server in the background
                // we will shut it down in "post" command block
                sh 'nohup yarn up &'
            }
        }

        stage('cypress parallel tests') {
            steps {
                echo "Running build ${env.BUILD_ID}"
                sh "yarn cy:e2e"
            }
        }
    }
}