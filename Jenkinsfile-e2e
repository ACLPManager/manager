pipeline {
    agent { 
        docker { 
            image 'node:10-slim'
            args '-u root:sudo -v ${pwd()}:/usr/src -w /usr/src'
        }
    }
    stages {
        stage('install') {
            steps {
                sh 'pwd && ls -la'
                sh 'yarn install:all'
                sh 'yarn workspace linode-mamager cypress -v'
            }
        }
    }
}