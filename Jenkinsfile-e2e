pipeline {
    
    agent { 
        docker { 
            args '-u root:sudo -w /usr/src'
            image 'node:10-slim'
        }
    }
    stages {
        stage('install') {
            steps {
                sh 'pwd && ls -la'
                sh 'yarn install:all'

                sh '$CYPRESS_CACHE_FOLDER'
                sh 'ls $CYPRESS_CACHE_FOLDER'
                sh 'yarn workspace linode-js-sdk build'
                sh 'ls /root/.cache/'
                sh 'yarn workspace linode-manager run cypress run'
                sh 'yarn cy:e2e'
            }
        }
    }
}